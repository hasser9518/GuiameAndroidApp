<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:background="@color/colorLightGray"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_confirm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_more_step"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_confirm_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Te hemos enviado un email a jimmy@gmail.com para verificar tu cuenta, así podrás usar todas las opciones de la app."
            />
    </LinearLayout>

</LinearLayout>