<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colores tomados de: https://color.adobe.com/es/search?q=green -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppOnboardingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPurple</item>
        <item name="android:textColorHint">@color/colorGreenLightGray</item>
    </style>

    <style name="AppTheme.Base.ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Base.Title1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <!--<item name="android:textAlignment">center</item>-->
    </style>

</resources>